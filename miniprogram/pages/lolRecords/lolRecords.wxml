<van-search value="{{ value }}" shape="round" background="#87CEEB" placeholder="请输入搜索关键词" />

<view style="text-align:center">
  <view >奖金池:</view>
  <view> {{money}} </view>
</view>

<scroll-view scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <van-row wx:for="{{historys}}" wx:key="id" class="itemRow" >
      <van-cell value="{{item.pvm}} - {{item.loseAmount}}" color="red" data-id="{{item._id}}" bindtap="goToDetail" is-link>
        <view slot="title">
        <view style="display:flex">
          <van-tag wx:if="{{item.win}}" mark type="success">胜</van-tag>
          <van-tag wx:else="{{item.win}}" mark type="danger">败</van-tag>
          <view style="margin-left:10rpx">{{item.mvp}} + {{item.winAmount}}</view>
        </view>
        </view>
      </van-cell>
    </van-row>
</scroll-view>

<view class="floatButton1" style="display:flex;flex-direction:column">
  <van-button bindtap="addRecord" icon="add-o" type="primary">新增</van-button>
<van-button bindtap="goAnalyse" style="margin:20rpx 0;" icon="info-o" type="info">统计</van-button>
<van-button bindtap="goPlayer" icon="info-o" type="warning">人员</van-button>
</view>

<van-toast id="van-toast" />