<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section">
      <van-cell-group>
        <label>选择表名</label>
        <van-picker columns="{{columns}}" bind="onChange" visible-item-count="3" item-height="35" />

        <van-field v-model="type" clearable label="消费用途" right-icon="question-o" placeholder="请输入用途" />
        <van-field v-model="money" clearable label="消费金额" right-icon="question-o" placeholder="请输入金额" type="digit" />
      </van-cell-group>

      <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" width="" height="150" />
          </swiper-item>
        </block>
      </swiper>
      <button bindtap="changeIndicatorDots"> indicator-dots </button>
      <button bindtap="changeAutoplay"> autoplay </button>
      <slider bindchange="intervalChange" show-value min="500" max="2000" />
      <slider bindchange="durationChange" show-value min="1000" max="10000" />
      <label>日期</label>
      <view>
        <van-datetime-picker v-model="{{currentDate}}" type="date" :min-date="minDate" max-date="{{maxDate}}" visible-item-count="3" />
      </view>
    </view>

  </view>

  <view class="btn-area">
    <button form-type="submit" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="primary"> 保存 </button>
    <button form-type="reset" type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="default" hover-class="other-button-hover"> 取消 </button>


  </view>
</form>